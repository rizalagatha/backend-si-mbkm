{
    "version": 2,
    "builds": [
      {
        "src": "app.js",       
        "use": "@vercel/node",  
        "config": {
          "includeFiles": ["prisma/**", "node_modules/.prisma/client/**"]
        }
      }
    ],
    "scripts": {
      "build": "npm run prisma:generate"
    },
    "routes": [
      {
        "src": "/(.*)",        
        "dest": "/app.js"
      }
    ]
  }
  